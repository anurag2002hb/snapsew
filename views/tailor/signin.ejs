    <div class="login-wrapper py-60 py-lg-130">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <% if (errorMessage) { %>
                        <div class="user-message user-message--error text-center fw-bold" > 
                            <h3 class="text-danger"><%= errorMessage %></h3>
                        </div>
                    <% } %>
                    <form class="login-form input-style2 bg-secondary px-5 py-5" action="/login" method="POST">
                        <h2 class="form-title text-center mb-2 mb-lg-5">Sign in</h2>
                        <div class="form-group">
                            <label for="email" class="sr-only">Username or email address*</label>
                            <input
                                class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %> form-control"
                                type="email" name="email" id="email" value="<%= oldInput.email %>" required=""
                                placeholder="Username or email address*">
                        </div>
                        <div class="form-group mb-3">
                            <label for="password" class="sr-only">Password*</label>
                            <input
                                class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %> form-control"
                                type="password" name="password" id="password" value="<%= oldInput.password %>"
                                placeholder="Password*">
                        </div>
                        <div class="form-group mb-0 text-center">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="vs-btn style3 icon-none w-100" type="submit">Login</button>
                            <div class="bottom-links link-inherit d-md-flex justify-content-between mt-3"><a href="#" class="recovery-link mb-2 mb-md-0">Forgot your password?</a> <a href="/tailor-sign-up">Or Create Account</a></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

